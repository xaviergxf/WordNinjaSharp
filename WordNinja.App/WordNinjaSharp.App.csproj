<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>WordNinja C# Library </Title>
    <PackageId>WordNinjaSharp</PackageId>
    <Authors>Nodir Azam</Authors>
    <Product>WordNinjaSharp</Product>
    <Description>C#.Net Library for splitting concatenated words, using NLP based on English Wikipedia unigram frequencies.</Description>
    <PackageProjectUrl>https://github.com/nodirmcsd/WordNinjaSharp</PackageProjectUrl>
    <PackageIcon>wordninjasharp-250.jpg</PackageIcon>
    <RepositoryUrl>https://github.com/nodirmcsd/WordNinjaSharp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>NLP, TextProcessing</PackageTags>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <None Include="wordninjasharp-250.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotNetZip" Version="1.16.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="wordninja.words.txt.gz">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>